<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    {{#remote-css}}
    <link href="{{src}}" rel="stylesheet" type="text/css">
    {{/remote-css}}
    {{#local-css}}
    <link href="{{context-root}}/css/{{src}}" rel="stylesheet" type="text/css">
    {{/local-css}}

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.min.js" type="text/javascript"></script>
    <script src="{{context-root}}/js/common.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    {{#remote-js}}
    <script src="{{src}}" type="text/javascript"></script>
    {{/remote-js}}
    {{#local-js}}
    <script src="{{context-root}}/js/{{src}}" type="text/javascript"></script>
    {{/local-js}}
  </head>
  <body onload="{{onload}}">
    <input type="hidden" id="context-root" value="{{context-root}}" />
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
	<div class="container">
	  <a class="navbar-brand" href="{{context-root}}/">Gameserver</a>
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	  </div>
	  <div class="navbar-collapse collapse">
	    <ul class="nav navbar-nav">
	      {{#authenticated?}}
	      <li><a href="{{context-root}}/world">World</a></li>
	      {{#nav-links}}
	      <li><a href="{{link}}">{{label}}</a></li>
	      {{/nav-links}}
	      {{/authenticated?}}
	      <li><a href="{{context-root}}/about">About</a></li>
	      {{#notauthenticated?}}
	      <li><a href="{{context-root}}/login/form">Login</a></li>
	      {{/notauthenticated?}}
	    </ul>
	    <ul class="nav navbar-nav navbar-right">
	      {{#authenticated?}}
	      <li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
		  <span class="glyphicon glyphicon-user"></span>
		  <span style="margin: 0 5px;">{{user}}</span>
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		  <li><a href="{{context-root}}/profile">Profile</a></li>
		  <li><a href="{{context-root}}/settings">Settings</a></li>
		  <li class="divider"></li>
		  <li><a href="{{context-root}}/logout">Logout</a></li>
		</ul>
	      </li>
	      {{/authenticated?}}
	    </ul>
	  </div>
	</div>
      </nav>
      <div class="container" id="content">
	{{{body}}}
      </div>
      <div class="footer">
	<div class="container">
	  &copy; Verbcoach 2016
	</div>
      </div>
    </div>
  </body>
</html>
