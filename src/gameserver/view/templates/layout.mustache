<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{context-root}}/css/main.css" rel="stylesheet" type="text/css">
    {{#remote-css}}
    <link href="{{src}}" rel="stylesheet" type="text/css">
    {{/remote-css}}
    {{#local-css}}
    <link href="{{context-root}}/css/{{src}}" rel="stylesheet" type="text/css">
    {{/local-css}}
    <script src="{{context-root}}/js/common.js" type="text/javascript"></script>
    {{#remote-js}}
    <script src="{{src}}" type="text/javascript"></script>
    {{/remote-js}}
    {{#local-js}}
    <script src="{{context-root}}/js/{{src}}" type="text/javascript"></script>
    {{/local-js}}
  </head>
  <body onload="{{onload}}">
    <input type="hidden" id="context-root" value="{{context-root}}" />
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
	<div class="container">
	  <a class="navbar-brand" href="{{context-root}}/">Gameserver</a>
	  <div class="navbar-collapse collapse">
	    <ul class="nav navbar-nav">
	      {{#authenticated?}}
	      <li><a href="{{context-root}}/world">World</a></li>
	      {{#nav-links}}
	      <li><a href="{{link}}">{{label}}</a></li>
	      {{/nav-links}}
	      {{/authenticated?}}
	      <li><a href="{{context-root}}/about">About</a></li>
	      {{#notauthenticated?}}
	      <li><a href="{{context-root}}/login/form">Login</a></li>
	      {{/notauthenticated?}}
	    </ul>
	    <ul class="nav navbar-nav navbar-right">
	      {{#authenticated?}}
	      <li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
		  <span class="glyphicon glyphicon-user"></span>
		  <span style="margin: 0 5px;">{{user}}</span>
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		  <li><a href="{{context-root}}/profile">Profile</a></li>
		  <li><a href="{{context-root}}/settings">Settings</a></li>
		  <li class="divider"></li>
		  <li><a href="{{context-root}}/logout">Logout</a></li>
		</ul>
	      </li>
	      {{/authenticated?}}
	    </ul>
	  </div>
	</div>
      </nav>
      <div class="container" id="content">
	{{{body}}}
      </div>

    </div>
  </body>
</html>
